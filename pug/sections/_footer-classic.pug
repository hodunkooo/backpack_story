footer.section.footer-classic.context-dark
	.container
		.row.row-narrow-40.row-30
			.col-lg-6.text-center.wow.fadeInLeft(data-wow-delay=".1s")
				.footer-media
					+img('footer-img-570x402')
			.col-lg-6.wow.fadeInRight(data-wow-delay=".2s")
				.footer-classic_subscribe
					h2 Newsletter Signup
					h5.text-primary SIGN UP NOW TO RECEIVE HOT SPECIAL OFFERS AND INFORMATION ABOUT THE BEST TOURS!
					form.rd-form.rd-mailform.rd-form-inline.subscribe-form(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
						.form-wrap
							input.form-input(id="subscribe-form-email-5" type="email" name="email" data-constraints="@Email @Required")
							label.form-label(for="subscribe-form-email-5") Enter your e-mail
							.form-button
								button.button.button-primary.fa.fa-chevron-circle-right(type="submit")
	.footer-classic-aside
		.container
			.row.justify-content-between.flex-column-reverse.flex-md-row.row-20
				.col-xl-6.col-md-8
					.footer-classic-aside__group
						+logo
						+rights
				.col-xl-3.col-md-4
					ul.social-list
						li.wow.fadeInUp(data-wow-delay=".1s"): a(href="#"): span.icon.fa.fa-facebook
						li.wow.fadeInUp(data-wow-delay=".2s"): a(href="#"): span.icon.fa.fa-twitter
						li.wow.fadeInUp(data-wow-delay=".3s"): a(href="#"): span.icon.fa.fa-instagram
						li.wow.fadeInUp(data-wow-delay=".4s"): a(href="#"): span.icon.fa.fa-pinterest
