	//Mailform
	section.section.section-lg.bg-image-11
		.container
			h2 Contact Or Visit Us
			.row.offset-lg
				.col-12.column-bg-5
					.row.row-30
						.col-lg-4
							.contact-info-box
								p Maecenas facilisis, orciut gravida posue re, urna est cursus tellus, id viverra ipsu urna  me malesu
								span.adress
									| 9870 St Vincent Place,
									br.d-none.d-xl-block
									| Glasgow, DC 45 Fr 45.
								ul.contact-list
									li
										span Freephone:
										a(href="tel:#") +1 800 559 6580
									li
										span Telephone:
										a(href="tel:#") +1 800 603 6035
									li
										span FAX:
										a(href="tel:#") +1 800 889 9898
									li
										span E-mail:
										a(href="mailto:#") mail@demolink.org
						.col-lg-8
							//RD Mailform
							form.rd-mailform.text-start.row.row-narrow-10.row-10.contact-form(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
								.col-lg-6
									.form-wrap
										label.form-label(for="contact-name") First Name
										input#contact-name.form-input(type="text" name="name" data-constraints='@Required')
								.col-lg-6
									.form-wrap
										label.form-label(for="contact-name-2") Last Name
										input#contact-name-2.form-input(type="text" name="last-name" data-constraints='@Required')
								.col-lg-6
									.form-wrap
										label.form-label(for="contact-email") Your EMail
										input#contact-email.form-input(type="email" name="email" data-constraints='@Required @Email')
								.col-lg-6
									.form-wrap
										label.form-label(for="contact-phone") Phone
										input#contact-phone.form-input(type="text" name="phone" data-constraints='@Required @PhoneNumber')

								.col-lg-12
									.form-wrap
										label.form-label(for="contact-message") Your Message
										textarea#contact-message.form-input(name="message" data-constraints='@Required')
								.form-button.col-lg-12.text-end
									button(type="submit").button-md.button.button-dark-blue Send message




	//Info Section
	section.section.section-md.inset-xl-top-50
